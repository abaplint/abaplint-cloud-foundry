{
  "name": "abaplint-cloud-foundry",
  "version": "1.0.0",
  "private": true,
  "description": "testing",
  "main": "index.js",
  "scripts": {
    "test": "tsc && concurrently \"tsc -w\"  \"nodemon build/server.js\"",
    "lint": "eslint src/**/*.ts",
    "start": "tsc && node build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abaplint/abaplint-cloud-foundry.git"
  },
  "author": "Lars Hvam Petersen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abaplint/abaplint-cloud-foundry/issues"
  },
  "engines": {
    "node": "12.13.x"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": "off",
      "quotes": "error",
      "semi": "error",
      "semi-spacing": "error",
      "no-confusing-arrow": "error",
      "no-duplicate-imports": "error",
      "max-statements-per-line": "error",
      "semi-style": "error",
      "indent": [
        "error",
        2,
        {
          "ignoreComments": true,
          "SwitchCase": 1
        }
      ],
      "curly": "error"
    }
  },
  "homepage": "https://github.com/abaplint/abaplint-cloud-foundry#readme",
  "dependencies": {
    "abaplint": "^2.28.3",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "typescript": "^3.8.3",
    "@types/express": "^4.17.3",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2"
  }
}
